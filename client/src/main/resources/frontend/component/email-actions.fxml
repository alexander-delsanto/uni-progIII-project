<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="frontend.component.EmailActionsController" alignment="CENTER_RIGHT"
      stylesheets="@../css/component/email-actions.css">

    <Button onAction="#openEmailEditor" text="New email" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="replyButton" onAction="#openEmailEditor" text="Reply" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="replyAllButton" onAction="#openEmailEditor" text="Reply All" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="forwardButton" onAction="#openEmailEditor" text="Forward" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="deleteButton" onAction="#deleteEmail" text="Delete email">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>

    </Button>
</HBox>